<% if @bus_route.present? %>
  <h1>Bus Route: <%= @bus_route.name %></h1>
  <p>Route Number: <%= @bus_route.route_number %></p>
<% else %>
  <h1>All Bus Stops</h1>
<% end %>

<h2>Stops List</h2>
<% if @stops.any? %>
  <ul>
    <% @stops.each do |stop| %>
      <li>
        <%= stop.name %> - (<%= stop.latitude %>, <%= stop.longitude %>)
        <a href="<%= stop_path(stop) %>">View Details</a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No stops available.</p>
<% end %>

<!-- Pagination -->
<%= paginate @stops %>
