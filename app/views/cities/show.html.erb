<div class="container mt-4">
  <h1 class="mb-3"><%= @city.name %></h1>
  <p><strong>State:</strong> <%= @city.state %></p>
  <p><strong>Country:</strong> <%= @city.country %></p>

  <h2 class="mt-4">Bus Routes in <%= @city.name %></h2>

  <% if @city.bus_routes.any? %>
    <ul class="list-group">
      <% @city.bus_routes.each do |route| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <%= route.name %> (Route Number: <%= route.route_number %>)
          </span>
          <%= link_to "View Route", bus_route_path(route), class: "btn btn-primary btn-sm" %>
        </li>
      <% end %>
    </ul>

    <!-- Pagination Links for Routes -->
    <div class="mt-3">
      <%= paginate @bus_routes %>
    </div>
  <% else %>
    <p class="alert alert-warning">No bus routes available for this city.</p>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back to Cities", cities_path, class: "btn btn-secondary" %>
  </div>
</div>
