<div class="container mt-4">
  <h1 class="mb-3"><%= @bus_route.name %> (Route Number: <%= @bus_route.route_number %>)</h1>

  <h2 class="mt-4">Cities Covered by This Route</h2>
  <p><strong>City:</strong> <%= @bus_route.city.name %></p>

  <h2 class="mt-4">Stops on This Route</h2>

  <% if @bus_route.stops.any? %>
    <ul class="list-group">
      <% @bus_route.stops.each do |stop| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <%= stop.name %> (Latitude: <%= stop.latitude %>, Longitude: <%= stop.longitude %>)
          </span>
          <%= link_to "View Stop", stop_path(stop), class: "btn btn-primary btn-sm" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="alert alert-warning">No stops assigned to this route.</p>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back to Bus Routes", bus_routes_path, class: "btn btn-secondary" %>
  </div>
</div>
